@using TB.Kutuphane.Entity
@model Uye

@{
    ViewBag.Title = "Üye Yetki Güncelle";
}

<div class="container-fluid">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor">Profil Güncelle</h4>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Default")">
                            Anasayfa
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        @Request.Cookies["uye"]["Ad"] @Request.Cookies["uye"]["Soyad"]
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Profil Güncelle</h4>
                    <form class="mt-4">
                        <div class="row">
                            <input type="hidden" value="@Model.Id" id="profiliId" />
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ad Soyad</label>
                                    <input type="text" value="@Model.Ad @Model.Soyad" class="form-control" id="profilAdSoyad" readonly required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mail Adresi *</label>
                                    <input type="email" value="@Model.Mail" class="form-control" id="profilMail" placeholder="Profil mail adresi" max="50" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>TC Kimlik No</label>
                                    <input type="number" value="@Model.TC" class="form-control" id="profilTc" placeholder="Profil TC Kimlik numarası" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Telefon *</label>
                                    <input type="number" value="@Model.Telefon" class="form-control" id="profilTelefon" placeholder="Profil telefon numarası" max="50" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Parola *</label>
                                    <input type="password" class="form-control" id="profilParola" placeholder="Profil parolası" min="1" max="8" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Parola(tekrar) *</label>
                                    <input type="password" class="form-control" id="profilParolaTekrar" placeholder="Profil parola tekrar" min="1" max="8" required>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-success" id="profilGuncelle">Profil Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>